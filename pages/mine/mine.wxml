<scroll-view>
  <view class="UCenter-bg">
    <view id="imageTop" class="cu-avatar xl round margin-left" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big99008.jpg);"></view>
    <view id="textTop"> 
      <view class="text-xl">LiJing</view>
      <view class="text-l">这是你使用裹裹的第787天</view>
    </view> 
  </view>
  <view class="padding flex text-center text-grey bg-white shadow-warp">
    <view class="flex flex-sub flex-direction solid-right">
      <view class="margin-top-sm">
        <text class="cuIcon-expressman text-red"></text>会员中心</view>
    </view>
    
    <view class="flex flex-sub flex-direction">
      <view class="margin-top-sm">
        <text class="cuIcon-card text-yellow"></text>裹酱积分</view>
    </view>
  </view>

  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="CopyLink">
        <text class="cuIcon-edit text-orange"></text>
        <text class="text-grey">导入包裹</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="CopyLink">
        <text class="cuIcon-settings text-blue"></text>
        <text class="text-grey">包裹通知设置</text>
      </view>
    </view>
    
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/log/log" hover-class="none">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">我的地址簿</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode">
        <text class="cuIcon-writefill text-red"></text>
        <text class="text-grey">我的证件</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode">
        <text class="cuIcon-appreciatefill text-red"></text>
        <text class="text-grey">服务中心</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/test/list" hover-class="none">
        <text class="cuIcon-creativefill text-orange"></text>
        <text class="text-grey">我要反馈</text>
      </navigator>
    </view>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>